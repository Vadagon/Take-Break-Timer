{
  "name": "Take Pause Reminder",
  "version": "1",
  "author": "Vadagon",
  "manifest_version": 2,
  "description": "Control volume and boost volume of any Tab",
  "permissions": [
    "tabs",
    "storage",
    "<all_urls>"
  ],
  "browser_action": {
    "default_icon": {
      "128": "images/pause.png"
    },
    "default_title": "Take Pause Reminder"
  },
  "background": {
    "scripts": ["background.js"]
  },
  "content_scripts": [
    {
      "matches": ["https://*/*", "http://*/*", "<all_urls>"],
      "js": ["custom/js/content.js"]
    }
  ],
    "web_accessible_resources": [
      "images/*"
  ],
  "options_page": "options.html",
  "offline_enabled": true,
  "externally_connectable": {
    "matches": ["*://*.volume-manager.org/*"]
  }
}