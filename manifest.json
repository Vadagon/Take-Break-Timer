{
    "name": "Take a Break Reminder",
    "version": "2.78",
    "author": "Vadagon",
    "manifest_version": 2,
    "description": "Smartly reminds when you should to take a break",
    "permissions": [
        "storage",
        "notifications",
        "background",
        "idle",
        "power"
    ],
    "browser_action": {
        "default_icon": {
            "16": "images/16.png",
            "19": "images/19.png",
            "20": "images/20.png",
            "32": "images/32.png",
            "38": "images/38.png",
            "40": "images/40.png",
            "128": "images/pause.png"
        },
        "default_title": "Start a Break/Work",
        "default_popup": "popup.html"
    },
    "background": {
        "scripts": ["background.js", "custom/js/plugins.js"],
        "persistent": true
    },
    "icons": {
        "16": "images/16.png",
        "32": "images/32.png",
        "48": "images/48.png",
        "64": "images/64.png",
        "128": "images/pause.png"
    },
    "web_accessible_resources": [
        "images/*",
        "custom/*",
        "sounds/*"
    ],
    "options_page": "options.html",
    "offline_enabled": true,
    "minimum_chrome_version": "50"
}