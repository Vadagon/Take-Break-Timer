{
  "name": "Take a Break Reminder",
  "version": "1.1",
  "author": "Vadagon",
  "manifest_version": 2,
  "description": "Smartly reminds when you should to take a break",
  "permissions": [
    "storage",
    "alarms",
    "notifications",
    "idle"
  ],
  "browser_action": {
    "default_icon": {
      "128": "images/pause.png"
    },
    "default_title": "Start a Break/Work"
  },
  "background": {
    "scripts": ["background.js"]
  },
  "content_scripts": [
    {
      "matches": ["https://*/*", "http://*/*", "<all_urls>"],
      "js": ["custom/js/content.js"]
    }
  ],
    "web_accessible_resources": [
      "images/*"
  ],
  "options_page": "options.html",
  "offline_enabled": true,
  "minimum_chrome_version": "32",
  "externally_connectable": {
    "matches": ["*://*.volume-manager.org/*"]
  }
}